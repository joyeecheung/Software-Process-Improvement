extends homework-layout

block main
  h1.submit-title 发布作业
  form(class='form-submit', action='/publish', method='POST')
    if create
      .form-group
        label
          ="作业名称"
          input.form-control(type='text', name='name')
      .form-group
        label
          ="截止日期"
          input.form-control(type='text', name='deadline')
      .form-group
        div.radio
          each course in courses
            label.radio-inline
              input(type="radio", name="course", value=course._id)
              =course.name
      .form-group
        textarea(name='content', class="form-control", rows="3")
    else
      input.hidden(type='text', readonly='readonly', name='requirement', value=requirement._id)
      .form-group
        label
          ="作业名称"
          input.form-control(type='text', name='name', value=requirement.name)
      .form-group
        label
        ="截止日期"
        input.form-control(type='text', name='deadline', value=requirement.deadline)
      .form-group
        textarea(name='content', class="form-control", rows="3") requirement.content

    .form-group
      button(class='btn btn-lg btn-primary', type='submit') 提交
