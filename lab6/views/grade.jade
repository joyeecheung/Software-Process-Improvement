extends homework-layout

block main
  if !ended
    div.alert.alert-warning(role="alert") 尚未到达截止日期
  p.homework-student homework.student.name
  p.homework-content homework.content
  form(class='form-submit', action='/grade', method='POST')
    input.hidden(name="homework", value=homework._id)
    label
      ="分数"
      input(type="number", name="grade")
    button(class='btn btn-lg btn-primary', type='submit') 提交