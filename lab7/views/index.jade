extends auth-layout

block main
  h1.text-center.login-title 登录 My Homeworks
    div.account-wall
      img(class='profile-img', src='/asset/img/photo.png')
      form(class='form-signin', action='/login', method='POST')
        input(type='text', name='username' class='form-control', placeholder='邮箱',required, autofocus)
        input(type='password', name='password' class='form-control', placeholder='密码', required)
        button(class='btn btn-lg btn-primary btn-block', type='submit') 登陆
        span.clearfix
    a(href='/signup', class='text-center new-account') 注册